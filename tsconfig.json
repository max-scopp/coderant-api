{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2017", "es2015", "DOM"],
    "skipLibCheck": true,
    "composite": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "declarationMap": true,
    "inlineSourceMap": true,
    "inlineSources": false,
    "noImplicitAny": false,
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "preserveWatchOutput": true,
    "rootDir": "src",
    "outDir": "lib",
    "typeRoots": ["src/types", "./node_modules/@types"]
  },
  "include": ["src"]
}
